<Window x:Class="AuralFixation.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AuralFixation.App"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1600">
    <Grid Background="Black">
		<ItemsControl x:Name="items">
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel Orientation="Horizontal" HorizontalAlignment="Stretch" />
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<Button x:Name="btn" Click="Click" MouseDoubleClick="DoubleClick" Tag="{Binding Name}" Background="Black" Foreground="White">
						<Grid>
							<Image Source="{Binding Icon}" Width="{Binding Icon.Width}" />
							<TextBlock Text="{Binding Name}" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="24" Margin="0,0,0,24" />
						</Grid>
					</Button>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
	</Grid>
</Window>
